@model List<ContactDelivery_MVC.Models.ContactInfo>
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<h3>Contact List</h3>
<table border="1">
    <tr>
        <th>Contact Id</th>
        <th>First Name</th>
        <th>Last Name</th>
        <th>Company</th>
        <th>Email</th>
        <th>Mobile</th>
        <th>Designation</th>
        <th>Details</th>
    </tr>

    @foreach (var contact in Model)
    {
        <tr>
            <td>@contact.ContactId</td>
            <td>@contact.FirstName</td>
            <td>@contact.LastName</td>
            <td>@contact.CompanyName</td>
            <td>@contact.EmailId</td>
            <td>@contact.MobileNo</td>
            <td>@contact.Designation</td>
            <td>
                <a asp-action="GetContactById" asp-route-id="@contact.ContactId">View</a>
            </td>
        </tr>
    }
</table>

<br />
<a asp-action="AddContact">Add New Contact</a>